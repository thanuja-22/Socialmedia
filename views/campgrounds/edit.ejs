<% layout('/layouts/boilerplate')%>
    <div class="row">
      <h1 class="text-center">New Campground</h1>
      <div class="col-6 offset-3">

        <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="post">
           <div class="mb-3">
             <label class="form-label" for="title">Title</label>
             <input class="form-control" type="text" name="title" value="<%=camp.title%>">
           </div>

           <div class="mb-3">
             <label class="form-label" for="location">Location</label>
             <input class="form-control" type="text" name="location" value="<%=camp.location%>">
           </div>

           <div class="mb-3">
             <label class="form-label" for="image">Image Url</label>
             <input class="form-control" type="text" name="image" value="<%=camp.image%>">
           </div>

            <div class="mb-3">
              <label class="form-label" for="price">Campground Price</label>
              <div class="input-group">
                 <span class="input-group-text" id="price-label">$</span>
                 <input type="text" class="form-control" placeholder="0.00" aria-label="Price" aria-describedby="price-label" name="price" value="<%=camp.price%>">
               </div>
            </div>


           <div class="mb-3">
             <label class="form-label" for="description">Description</label>
             <textarea class="form-control" type="text" name="description"><%=camp.description%></textarea>
           </div>



           <button class="btn btn-info" type="submit">Update Campground</button>

        </form><br />

        <a href="/campgrounds/<%=camp._id%>">Back to campgrounds</a>

      </div>

    </div>
